{
	"manifest_version": 3,
	"name": "InclusiView",
	"description": "Extension that makes websites more accessible and easy to read",
	"version": "1.0",
	"permissions": [
		"activeTab",
		"scripting",
		"storage"
	],
	"host_permissions": ["<all_urls>"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["Scripts/script.js"]
		}
	],
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "Images/logo.png",
			"48": "Images/logo.png",
			"128": "Images/logo.png"
		}
	}
}